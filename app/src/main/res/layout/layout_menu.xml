<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue"
    android:orientation="vertical">

    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <LinearLayout
                android:id="@+id/ready_login"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="35dp"
                android:padding="5dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/menu_head"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/img_index_home" />

                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:text="首页"
                    android:textColor="@color/color_white"
                    android:textSize="19sp" />
            </LinearLayout>
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:text="账号："
                    android:textSize="13sp"
                    android:textColor="@color/color_white"/>

                <TextView
                    android:id="@+id/teltphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/color_white"/>
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <LinearLayout>

                <TextView
                    android:layout_marginLeft="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会员等级："
                    android:textSize="13sp"
                    android:textColor="@color/color_white"/>

                <TextView
                    android:id="@+id/vip_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/color_white"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white">
    <TableLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:clickable="true"
            android:id="@+id/tv_my_count"
            android:background="@drawable/bg_selector"
            android:paddingBottom="10dp"
            android:paddingTop="15dp"
            android:paddingLeft="30dp">
            <ImageView
                android:src="@drawable/img_index_home"/>
            <TextView
                android:textSize="17sp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:text="首页"
                android:textColor="@color/color_white"/>
        </TableRow>
        <TableRow
            android:clickable="true"
            android:id="@+id/tv_my_vip"
            android:background="@drawable/bg_selector"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <ImageView
                android:src="@drawable/img_index_message"/>
            <TextView
                android:textSize="17sp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:text="消息"
                android:textColor="@color/color_white"/>
        </TableRow>
        <TableRow
            android:clickable="true"
            android:id="@+id/tv_my_order"
            android:background="@drawable/bg_selector"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp">
            <ImageView
                android:src="@drawable/img_index_circle"/>
            <TextView
                android:textSize="17sp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:text="圈子"
                android:textColor="@color/color_white"/>
        </TableRow>
        <TableRow
            android:clickable="true"
            android:id="@+id/tv_my_wallet"
            android:background="@drawable/bg_selector"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp">
            <ImageView
                android:src="@drawable/img_index_mine"/>
            <TextView
                android:textSize="17sp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:text="我的"
                android:textColor="@color/color_white"/>
        </TableRow>
        <TableRow
            android:clickable="true"
            android:id="@+id/tv_my_about_us"
            android:background="@drawable/bg_selector"
            android:paddingLeft="30dp"
            android:paddingTop="18dp"
            android:paddingBottom="10dp">
            <ImageView
                android:src="@drawable/img_index_guidance"/>
            <TextView
                android:textSize="17sp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:text="新手引导"
                android:textColor="@color/color_white"/>
        </TableRow>

    </TableLayout>
    </RelativeLayout>



</LinearLayout>