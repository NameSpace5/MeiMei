<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/left_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:background="#000000"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:paddingTop="20dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="2dp"/>
        <TextView
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="Beautiful"
            android:textColor="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="22sp" />

        <TableLayout
            android:paddingTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:id="@+id/menu_index_home"
                android:paddingTop="23dp"
                android:paddingBottom="23dp">
                <ImageView
                    android:src="@drawable/img_index_home"
                    android:layout_marginLeft="25dp"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="25dp" />
                <TextView
                    android:id="@+id/test"
                    android:text="首页"
                    android:textColor="@color/color_white"
                    android:layout_marginLeft="25dp"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp" />
            </TableRow>
            <TableRow
                android:id="@+id/menu_index_message"
                android:paddingTop="23dp"
                android:paddingBottom="23dp">
                <ImageView
                    android:src="@drawable/img_index_message"
                    android:layout_marginLeft="25dp"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="25dp" />
                <TextView
                    android:text="消息"
                    android:textColor="@color/color_white"
                    android:layout_marginLeft="25dp"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp" />
            </TableRow>
            <TableRow
                android:id="@+id/menu_index_circle"
                android:paddingTop="23dp"
                android:paddingBottom="23dp">
                <ImageView
                    android:src="@drawable/img_index_circle"
                    android:layout_marginLeft="25dp"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="25dp" />
                <TextView
                    android:text="圈子"
                    android:textColor="@color/color_white"
                    android:layout_marginLeft="25dp"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp" />
            </TableRow>
            <TableRow
                android:id="@+id/menu_index_mine"
                android:paddingTop="23dp"
                android:paddingBottom="23dp">
                <ImageView
                    android:src="@drawable/img_index_mine"
                    android:layout_marginLeft="25dp"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="25dp" />
                <TextView
                    android:text="我的"
                    android:textColor="@color/color_white"
                    android:layout_marginLeft="25dp"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp" />
            </TableRow>
            <TableRow
                android:id="@+id/menu_index_guidance"
                android:paddingTop="23dp"
                android:paddingBottom="23dp">
                <ImageView
                    android:src="@drawable/img_index_guidance"
                    android:layout_marginLeft="25dp"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="25dp" />
                <TextView
                    android:text="新手引导"
                    android:textColor="@color/color_white"
                    android:layout_marginLeft="25dp"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>